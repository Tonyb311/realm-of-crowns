{
  "name": "@realm-of-crowns/server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "node -e \"fs=require('fs');fs.rmSync('dist',{recursive:true,force:true})\" && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "TS_NODE_PROJECT=tsconfig.build.json node -r tsconfig-paths/register dist/index.js",
    "test": "jest --runInBand --forceExit",
    "test:verbose": "jest --runInBand --forceExit --verbose"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "4.22.1",
    "express-rate-limit": "^7.3.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.0",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^3.0.3",
    "pino": "^10.3.1",
    "prom-client": "^15.1.3",
    "socket.io": "4.8.3",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.14.0",
    "@types/node-cron": "^3.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "30.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "29.4.6",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0"
  }
}
